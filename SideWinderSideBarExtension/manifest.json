{
  "name": "SideWinder | Torn City Sidebar Extension",
  "description": "Adds a sidebar to Torn City with QoL features like link groups, trackers, a calculator, attack list, notepad, and more!",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.torn.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.torn.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon.png"
  },
  "web_accessible_resources": [{
    "resources": [
      "assets/*.svg"
    ],
    "matches": ["<all_urls>"]
  }]
}
